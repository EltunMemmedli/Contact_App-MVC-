@model Contact

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact List</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css"></link>
</head>
<body>

    <nav class="NavBar">
        <p>Contact App</p>
        <a href="#">Add Contact</a>
    </nav>
    <hr>

    <ul class="ContactCard Card1">
            <a>
                <img src="~/img/Royalty-Free Vector Images (over 41_3 million) - Page 26.jpg" alt="Sekil">
                <p style="font-weight: bold;">ID: @Model.ID</p>
                <p>Name: @Model.Name</p>
                <p>Surname: @Model.Surname</p>
                <p>Phone Number: @Model.Phone_Number</p>
            </a>

        <div class="Suggestions">
            <a asp-controller="Contact" asp-action="RemoveContact" asp-route-id="@Model.ID">Delete</a>
            <a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@Model.ID">Update</a>
        </div>

    </ul>
</body>
</html>